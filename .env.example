# OpenAI兼容格式的TTS API服务环境变量配置

# 服务器配置
PORT=3000
HOST=0.0.0.0

# 目标TTS API配置
TARGET_TTS_API_URL=https://user.api.hudunsoft.com/v1/alivoice/texttoaudio
TTS_API_KEY=your-api-key-here # x-credits
TARGET_API_TIMEOUT=30000
TARGET_API_RETRY_COUNT=2

# HUDUNSOFT特定配置
HUDUNSOFT_X_DOMAIN=user.api.hudunsoft.com
HUDUNSOFT_X_PRODUCT=335
HUDUNSOFT_X_VERSION=5.7.0.0
HUDUNSOFT_CLIENT=web
HUDUNSOFT_SOURCE=335
HUDUNSOFT_SOFT_VERSION=V4.4.0.0
HUDUNSOFT_DEVICE_ID=your-device-id-here
HUDUNSOFT_TOKEN=your-token-here
HUDUNSOFT_BG_ID=0
HUDUNSOFT_BG_VOLUME=5
HUDUNSOFT_VOLUME=4
HUDUNSOFT_PITCH_RATE=4
HUDUNSOFT_BG_URL=

# 认证配置
API_AUTH_ENABLED=false
API_KEY=your-auth-api-key

# 日志配置
LOG_LEVEL=debug
LOG_FILE=./logs/tts-api.log

# 缓存配置
CACHE_ENABLED=false
CACHE_TTL=3600
CACHE_MAX_SIZE=1000

# 限流配置
RATE_LIMIT_ENABLED=false
RATE_LIMIT_WINDOW=60000
RATE_LIMIT_MAX=100

# 语音映射配置
VOICE_ALLOY=voice1
VOICE_ECHO=voice2
VOICE_FABLE=voice3
VOICE_ONYX=voice4
VOICE_NOVA=voice5
VOICE_SHIMMER=voice6